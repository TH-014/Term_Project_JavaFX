<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.term_project_javafx.client.AddMovieController">
   <children>
      <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="18.0" prefWidth="874.0" text="Add Movie" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="titleBox" layoutX="48.0" layoutY="64.0" prefHeight="40.0" prefWidth="824.0" promptText="Enter Movie Title">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="yearBox" layoutX="48.0" layoutY="145.0" prefHeight="40.0" prefWidth="824.0" promptText="Enter Releasing Year">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="genre1Box" layoutX="48.0" layoutY="200.0" prefHeight="40.0" prefWidth="824.0" promptText="Enter Genre (1)">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="genre2Box" layoutX="48.0" layoutY="254.0" prefHeight="40.0" prefWidth="824.0" promptText="Enter Genre (2) (Optional)">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="genre3Box" layoutX="48.0" layoutY="310.0" prefHeight="40.0" prefWidth="824.0" promptText="Enter Genre (3) (Optional)">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="lengthBox" layoutX="48.0" layoutY="368.0" prefHeight="40.0" prefWidth="824.0" promptText="Enter Movie Length">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="budgetBox" layoutX="48.0" layoutY="423.0" prefHeight="40.0" prefWidth="824.0" promptText="Enter Movie Budget">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="revenueBox" layoutX="48.0" layoutY="478.0" prefHeight="40.0" prefWidth="824.0" promptText="Enter Movie Revenue">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <Button fx:id="addButton" layoutX="570.0" layoutY="530.0" mnemonicParsing="false" onAction="#onSubmitClick" text="Submit">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button layoutX="232.0" layoutY="530.0" mnemonicParsing="false" onAction="#onBackClick" text="Back">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label fx:id="addMovieWarning" layoutX="48.0" layoutY="114.0" prefHeight="18.0" prefWidth="824.0" textFill="RED">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
