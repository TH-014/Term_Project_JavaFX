<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.term_project_javafx.client.ServerConnectionController">
   <children>
      <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="91.0" prefWidth="874.0" text="Server Connection Error !!!" textFill="RED">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="198.0" prefHeight="52.0" prefWidth="874.0" text="Please enter correct server IP address and Port" textFill="#e5ff00">
         <font>
            <Font name="System Italic" size="14.0" />
         </font>
      </Label>
      <Label alignment="CENTER" layoutX="14.0" layoutY="105.0" prefHeight="9.0" prefWidth="874.0" text="No server found in your local IP adress" textFill="#e9ff00">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="serverIPBox" layoutX="14.0" layoutY="250.0" prefHeight="40.0" prefWidth="870.0" promptText="Enter server IP Address (ex. 127.0.0.1)">
         <font>
            <Font name="System Italic" size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="serverPortBox" layoutX="14.0" layoutY="310.0" prefHeight="40.0" prefWidth="870.0" promptText="Enter server port (ex. 33333)">
         <font>
            <Font name="System Italic" size="18.0" />
         </font>
      </TextField>
      <Button layoutX="391.0" layoutY="415.0" mnemonicParsing="false" onAction="#onConnectClick" text="Connect">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
